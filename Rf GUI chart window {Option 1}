import tkinter as tk
from tkinter import *
from tkinter import ttk

def variable():
    variable = StringVar(main)
    variable.set('Select One')
    dropdown = OptionMenu(main, variable, 'Widget','Tab','Button','Text Field', 'Slide Bar', 'Radio Button')
    dropdown.pack()

main = tk.Tk()
base = ttk.Treeview(main, column=('c1', 'c2', 'c3', 'c4'), show='headings')
base.column('c1', anchor=tk.CENTER)
base.heading('c1', text='Screenshot')
base.column('c2', anchor=tk.CENTER)
base.heading('c2', text='Name')
base.column('c3', anchor=tk.CENTER)
base.heading('c3', text='Type')
base.column('c4', anchor=tk.CENTER)
base.heading('c4', text='Cordinates')
base.pack()

base.mainloop()
